<h1>Portifolio</h1>
<div class="search-area">
  <h3>Search Stocks</h3>
  <%= form_tag stocks_search_path, remote: true, method: :get do %>
    <div class="form-group row">
      <div class="col-sm-9 no-padding-right">
        <%= text_field_tag :stock, params[:stock], placeholder: "Stock ticket symbol", autofocus: true, class: "form-control form-control-lg" %>
      </div>
      <div class="col-sm-3 no-padding-left">
        <%= button_tag type: :submit, class: "btn btn-success" do %>
          <%= fa_icon "search 2x" %>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
<div id="result">
</div>
<%= render 'stocks/list' %>
