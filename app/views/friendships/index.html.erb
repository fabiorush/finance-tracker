<h1>Friends</h1>
<div class="search-area">
  <h3>Search Friends</h3>
  <%= form_tag friendships_search_path, remote: true, method: :get do %>
    <div class="form-group row">
      <div class="col-sm-9 no-padding-right">
        <%= text_field_tag :name_email, params[:name_email], placeholder: "Name or email", autofocus: true, class: "form-control form-control-lg" %>
      </div>
      <div class="col-sm-3 no-padding-left">
        <%= button_tag type: :submit, class: "btn btn-success" do %>
          <%= fa_icon "search 2x" %>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
<div id="result">
</div>
<% if @friends.present? %>
  <%= render 'list' %>
<% else %>
  <p>You are tracking no friends</p>
<% end %>