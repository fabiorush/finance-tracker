<div class="<%= "card card-header " if @users.present? %>results-block">
  <% if @users.present? %>
  <table class="col-md-12">
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><strong>Name: </strong> <%= user.full_name %></td>
          <td><strong>Email: </strong> <%= user.email %></td>
          <td><strong>Actions: </strong>
          <%= link_to "View Profile", "#", method: :post, class: "btn btn-success" %>
          <%= link_to "Follow friend?", "#", method: :post, class: "btn btn-success" %></td>
        </tr>
      <% end %>
    </tbody>
  <% else %>
    <%= render 'layouts/messages' %>
  <% end %>
</div>
