<div class="<%= "card card-header " if @users.present? %>results-block">
  <% if @users.present? %>
  <table class="col-md-12">
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><strong>Name: </strong> <%= user.full_name %></td>
          <td><strong>Email: </strong> <%= user.email %></td>
          <td><strong>Actions: </strong>
          <%= link_to "View Profile", user_path(user), class: "btn btn-success" %>
          <% unless current_user.friends.exists?(user.id) %>
            <%= link_to "Follow friend?", friendships_path(friend_id: user), method: :post, class: "btn btn-success" %></td>
          <% else %>
            <span class="badge badge-secondary">
              You are friends
            </span>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
  <% else %>
    <%= render 'layouts/messages' %>
  <% end %>
</div>
